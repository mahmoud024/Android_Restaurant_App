<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Semi-transparent black for shadow color -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Main shape with some translation to simulate shadow -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"> <!-- Adjust these values for the shadow offset -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="@color/n"/>
        </shape>
    </item>

</layer-list>
